<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@drawable/roundcorners"
    android:gravity="bottom"
    android:paddingBottom="1sp"
    android:paddingLeft="1sp"
    android:paddingRight="1sp"
    android:paddingTop="1sp"
    android:weightSum="6"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|center_horizontal"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/dayNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Day"
                    android:textColor="#ecf0f1"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="-"
                    android:textColor="#ecf0f1"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/gregorianTimeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Date"
                    android:textColor="#ecf0f1"
                    android:textSize="13sp" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Lancaster University"
                android:textColor="#ecf0f1"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="20sp"></TextView>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/roundcorners2"
        android:gravity="center"
        android:weightSum="3">


        <TableRow
            android:id="@+id/azanCdBg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/minOfAzanCdTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#e74c3c"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/minOfAzanCdSign"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="top"
                    android:textColor="#2c3e50"
                    android:textSize="16sp" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Time until Igama"
                    android:textColor="#2c3e50"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/hourOfIgamaCdTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#e74c3c"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/hourOfIgamaCdSign"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text=":"
                        android:textColor="#e74c3c"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/minOfIgamaCdTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#e74c3c"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/minOfIgamaCdSign"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text=":"
                        android:textColor="#e74c3c"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/secOfIgamaCdTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#e74c3c"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="5sp"></TextView>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:background="@drawable/roundcorners3"
        android:gravity="center"
        android:weightSum="9">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/displayMsgToUsrTv"
                android:gravity="center"
                android:text="Prayer times may change at short notice"
                android:textColor="#2c3e50"
                android:textSize="12sp"
                android:textStyle="bold"></TextView>

        </TableRow>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top">

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="50"
                    android:gravity="left"
                    android:text="    Prayer"
                    android:textColor="#2c3e50"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:text="Azan"
                    android:textColor="#2c3e50"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:text="Igama"
                    android:textColor="#2c3e50"
                    android:textSize="12sp" />
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="#ecf0f1"></TextView>

        <TableLayout
            android:id="@+id/fajrBgTL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="25"
                    android:gravity="left"
                    android:text="  Fajr"
                    android:textColor="#2c3e50"
                    android:textSize="18sp" />

                <TableLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:gravity="center">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/shehriLblTV"
                            android:gravity="right"
                            android:textColor="#2c3e50"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_marginTop="-2dp"
                            android:gravity="left"
                            android:includeFontPadding="false"
                            android:text=" SH"
                            android:textColor="#2c3e50"
                            android:textSize="9dp" />
                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/fajrAzanTV"
                    android:layout_width="0sp"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:textColor="#2c3e50"
                    android:textSize="18sp" />

                <TableLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:gravity="center">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/fajrIgamaTV"
                            android:gravity="center"
                            android:textColor="#2c3e50"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/sunriseTV"
                            android:gravity="right"
                            android:textColor="#2c3e50"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_marginTop="-2sp"
                            android:gravity="left"
                            android:includeFontPadding="false"
                            android:text=" SR"
                            android:textColor="#2c3e50"
                            android:textSize="9sp" />
                    </TableRow>
                </TableLayout>
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="#ecf0f1"></TextView>

        <TableLayout
            android:id="@+id/zhorBgTL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="50"
                    android:gravity="left"
                    android:text="  Zohr"
                    android:textColor="#2c3e50"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/zhorAzanTV"
                    android:layout_width="0sp"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:textColor="#2c3e50"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/zhorIgamaTV"
                    android:layout_width="0sp"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:textColor="#2c3e50"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="#ecf0f1"></TextView>

        <TableLayout
            android:id="@+id/asorBgTL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="50"
                    android:gravity="left"
                    android:text="  Asr"
                    android:textColor="#2c3e50"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/asorAzanHanafiTV"
                    android:layout_width="0sp"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:textColor="#2c3e50"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/asorIgamaTV"
                    android:layout_width="0sp"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:textColor="#2c3e50"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="#E6ecf0f1"></TextView>

        <TableLayout
            android:id="@+id/magribBgTL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="50"
                    android:gravity="left"
                    android:text="  Maghrib"
                    android:textColor="#2c3e50"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:textColor="#2c3e50"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/magribIgamaTV"
                    android:layout_width="0sp"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:textColor="#2c3e50"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="#ecf0f1"></TextView>

        <TableLayout
            android:id="@+id/ishaBgTL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="50"
                    android:gravity="left"
                    android:text="  Isha"
                    android:textColor="#2c3e50"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/ishaAzanTV"
                    android:layout_width="0sp"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:textColor="#2c3e50"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/ishaIgamaTV"
                    android:layout_width="0sp"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:textColor="#2c3e50"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="#E6ecf0f1"></TextView>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:gravity="center"
                android:text="Please, make Duaa for my Parents"
                android:textColor="#2c3e50"
                android:textSize="12sp"
                android:textStyle="bold"></TextView>

        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10sp"></TextView>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                style="@style/button_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/red_button"
                android:onClick="gotoMasjidLocation"
                android:text="Prayer Room Location"
                android:textSize="13sp" />

            <Button
                style="@style/button_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/red_button"
                android:onClick="gotoIsocFacebookPage"
                android:text="iSoc on Facebook"
                android:textSize="13sp" />

            <Button
                style="@style/button_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/red_button"
                android:onClick="gotoLancasterMasjidApp"
                android:text="Masjid-E-nour (Lancaster)"
                android:textSize="13sp" />

        </LinearLayout>

    </TableRow>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="15sp"></TextView>

</TableLayout>

